@{
     ViewData["title"] = "Editar";
}

<h5 class="card-title">Editar Empresa</h5>

<form  method="post" asp-controller="Enterprise" asp-action="Udpate" class="row g-3">
 
    <input asp-for="Id" type="hidden" class="form-control" id="name"  required>

  <div class="col-md-4">
    <label for="name" class="form-label">Nombre de la empresa</label>
    <input asp-for="Name" type="text" class="form-control" id="name"  required>
  </div>

  <div class="col-md-4">
    <label for="adress" class="form-label">Direccion</label>
    <input asp-for="Adress" type="text" class="form-control" id="adress" required>
  </div>

    <div class="col-md-12">
    <label for="nit" class="form-label">Numero de identificacion tributaria (Nit)</label>
    <input asp-for="Nit" type="number" class="form-control" id="nit" required>
  </div>
  
  
  <div class="col-12">
    <button class="btn btn-primary" type="submit" >Enviar formulario </button>
  </div>
</form>